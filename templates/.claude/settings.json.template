{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session-start-hook.py",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/user-prompt-submit-hook.py",
            "timeout": 5,
            "comment": "v20.1: Task init + gameplay pack injection + sub-agent launch"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/iteration-tracker-hook.py",
            "timeout": 5,
            "comment": "v20.2: Intent classification + sentiment analysis + iteration tracking"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/check-critical-rules.py",
            "timeout": 10,
            "comment": "v20.1: CRITICAL rule check + violation counter + notification"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validate-api-usage.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/enforce-step2.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/conversation-recorder.py",
            "timeout": 3,
            "comment": "v20.2.7: Record conversation history to .conversation.jsonl"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/unified-workflow-driver.py",
            "timeout": 5,
            "comment": "v20.1: Workflow driver (removed step2) + enhanced expert diagnosis"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/post-archive-hook.py",
            "timeout": 5,
            "comment": "Task archiving and doc sync injection"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/post-archive-doc-enforcer.py",
            "timeout": 5,
            "comment": "v20.1.1: Enforce doc creation verification"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/suggest-docs-on-error.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/log-changes.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/enforce-cleanup.py",
            "timeout": 10,
            "comment": "v20.1: Enforce cleanup + notification"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/post-archive-hook.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/subagent-complete-notifier.py",
            "timeout": 3,
            "comment": "v20.1: Sub-agent completion notification"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/pre-compact-reminder.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
