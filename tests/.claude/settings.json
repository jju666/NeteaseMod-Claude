{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/session_start.py",
            "timeout": 300
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator/user_prompt_handler.py",
            "timeout": 300,
            "comment": "v25.0.1: timeout=300秒以确保LLM语义分析有足够时间完成"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator/pretooluse_enforcer.py",
            "timeout": 300,
            "comment": "v20.3: Unified PreToolUse enforcer - 4-layer validation (Stage-Tool-Path-Semantic)"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator/posttooluse_updater.py",
            "timeout": 300,
            "comment": "v20.3: Unified PostToolUse updater - State updates + Expert trigger + Step advancement"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/stop.py",
            "timeout": 300,
            "comment": "v20.3: Session stop cleanup"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/archiver/post_archive.py",
            "timeout": 300,
            "comment": "v3.0 Final: Task archiving on finalization completion"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/subagent_stop.py",
            "timeout": 300,
            "comment": "v22.2: Sub-agent result extraction + LLM fallback"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/pre_compact.py",
            "timeout": 300,
            "comment": "v3.1: Save task state before compaction"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/pre_compact_reminder.py",
            "timeout": 300,
            "comment": "v20.3: Pre-compact reminder"
          }
        ]
      }
    ]
  }
}
