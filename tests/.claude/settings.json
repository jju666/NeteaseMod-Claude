{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/session_start.py",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator/user_prompt_handler.py",
            "timeout": 5,
            "comment": "v20.3: Task init + gameplay pack injection + sub-agent launch"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator/pretooluse_enforcer.py",
            "timeout": 10,
            "comment": "v20.3: Unified PreToolUse enforcer - 4-layer validation (Stage-Tool-Path-Semantic)"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/validators/critical_rules_checker.py",
            "timeout": 10,
            "comment": "v20.3: CRITICAL rule check + violation counter + notification (kept for legacy support)"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/api_usage_validator.py",
            "timeout": 5,
            "comment": "v20.3: API usage validation (kept for legacy support)"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator/posttooluse_updater.py",
            "timeout": 5,
            "comment": "v20.3: Unified PostToolUse updater - State updates + Expert trigger + Step advancement"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/archiver/conversation_recorder.py",
            "timeout": 3,
            "comment": "v20.3: Record conversation history to .conversation.jsonl"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/archiver/post_archive.py",
            "timeout": 5,
            "comment": "v20.3: Task archiving and doc sync injection"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/archiver/doc_enforcer.py",
            "timeout": 5,
            "comment": "v20.3: Enforce doc creation verification"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/monitors/error_suggester.py",
            "timeout": 5,
            "comment": "v20.3: Suggest docs on bash error"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/monitors/change_logger.py",
            "timeout": 5,
            "comment": "v20.3: Log code changes"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/stop.py",
            "timeout": 10,
            "comment": "v20.3: Session stop cleanup"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/archiver/post_archive.py",
            "timeout": 10,
            "comment": "v20.3: Task archiving on stop"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/utils/subagent_notifier.py",
            "timeout": 3,
            "comment": "v20.3: Sub-agent completion notification"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/cleanup_subagent_stop.py",
            "timeout": 3,
            "comment": "v20.3: Remove .cleanup-subagent.lock when cleanup subagent stops"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/validators/pre_compact_reminder.py",
            "timeout": 5,
            "comment": "v20.3: Pre-compact reminder"
          }
        ]
      }
    ]
  }
}
